<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.jeroenstevens.graduation_android" >

    <!-- client -->
    <!-- Authentication -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS"/>

    <!-- Gallery access -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <!-- Authenticator -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>

    <!-- Sync Adapter -->
    <uses-permission android:name="android.permission.READ_SYNC_STATS" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:icon="@drawable/chest_icon_white"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Client -->
        <activity android:name=".activity.CollectionActivity" android:label="@string/collection_label"/>

        <!-- Authentication -->
        <activity android:name=".authentication.AuthenticatorActivity" android:label="@string/login_label"/>
        <activity android:name=".authentication.SignUpActivity" android:label="@string/signup_title" />

        <!-- Content Provider -->
        <provider android:authorities="ourContentProviderAuthorities"
                  android:syncable="true"
                  android:exported="false"
                  android:name="com.activeandroid.content.ContentProvider"/>

        <!-- Sync Service -->
        <service android:name=".authentication.AuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>
            <meta-data android:name="android.accounts.AccountAuthenticator"
                       android:resource="@xml/authenticator" />
        </service>

        <!-- Sync Adapter -->
        <service android:name=".syncadapter.SyncService"
                 android:exported="true">
            <intent-filter>
                <action android:name="android.content.SyncAdapter"/>
            </intent-filter>
            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/sync_adapter"/>
        </service>

        <!-- ActiveAndroid -->
        <meta-data android:name="AA_DB_NAME" android:value="@string/databaseName"/>
        <meta-data android:name="AA_DB_VERSION" android:value="1" />

    </application>

</manifest>
